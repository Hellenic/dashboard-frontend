<div id="news-widget" class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Local news</h3>
    </div>

    <div class="panel-body">
      <ul>
        <li rt-repeat="news in this.state.news">
          <h3>{newsIndex}. {news.title}</h3>
          <p>{news.content}</p>
        </li>
      </ul>
    </div>
</div>
